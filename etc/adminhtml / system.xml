<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="system">
            <group id="smtp">
                <field id="active" translate="label" type="select" sortOrder="90" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="1">
                    <label>Custom SMTP?</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="auth" translate="label" type="select" sortOrder="100" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="1">
                    <label>SMTP Authentication method</label>
                    <source_model>Magento\Config\Model\Config\Source\Email\Smtpauth</source_model>
                    <comment>Use your SMTP Credentials.</comment>
                    <depends>
                        <field id="active">1</field>
                    </depends>
                </field>
                <field id="ssl" translate="label" type="select" sortOrder="110" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="1">
                    <label>SSL type</label>
                    <source_model>Diepxuan\Email\Model\Config\Source\Email\SmtpType</source_model>
                    <comment>Use SSL Type (if applicable) .</comment>
                    <depends>
                        <field id="active">1</field>
                    </depends>
                </field>
                <field id="smtphost" translate="label" type="text" sortOrder="120" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="1">
                    <label>SMTP Host</label>
                    <comment>Use "smtp.gmail.com" for Gmail or Google Apps.</comment>
                    <depends>
                        <field id="active">1</field>
                    </depends>
                </field>
                <field id="smtpport" translate="label" type="text" sortOrder="130" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="1">
                    <label>SMTP Port</label>
                    <validate>validate-number</validate>
                    <frontend_class>validate-number</frontend_class>
                    <comment>Use 465 (ssl) or 587 (tls) if port 25 is throttled or blocked.</comment>
                    <depends>
                        <field id="active">1</field>
                    </depends>
                </field>
                <field id="username" translate="label" type="text" sortOrder="140" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="1">
                    <label>SMTP Username</label>
                    <comment>Email Address or Account ID.</comment>
                    <depends>
                        <field id="active">1</field>
                    </depends>
                </field>
                <field id="password" translate="label" type="text" sortOrder="150" showInDefault="1" showInWebsite="0" showInStore="0" canRestore="1">
                    <label>Password</label>
                    <backend_model>Magento\Config\Model\Config\Backend\Encrypted</backend_model>
                    <depends>
                        <field id="active">1</field>
                    </depends>
                </field>
            </group>
        </section>
    </system>
</config>
